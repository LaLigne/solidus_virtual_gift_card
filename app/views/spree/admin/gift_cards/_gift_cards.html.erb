<table class="index">
  <thead>
    <tr>
      <th class="align-center">Redemption Code</th>
      <th class="align-center">Amount</th>
      <th class="align-center">Amount Used</th>
      <th class="align-center">Purchased by</th>
      <th class="align-center">Purchased at</th>
      <th class="align-center">Redeemed by</th>
      <th class="align-center">Redeemed at</th>
    </tr>
  </thead>
  <tbody>
    <% @gift_cards.each do |gift_card| %>
      <tr>
        <td class="align-center"><%= gift_card.formatted_redemption_code %></td>
        <td class="align-center"><%= gift_card.display_amount %></td>
        <td class="align-center"><%= gift_card.display_amount_used %></td>
        <td class="align-center"><%= gift_card.purchaser_email %></td>
        <td class="align-center"><%= gift_card.created_at.strftime("%F %I:%M%p") %></td>
        <% if gift_card.redeemed? %>
          <td class="align-center"><%= gift_card.redeemer_email %></td>
          <td class="align-center"><%= gift_card.redeemed_at.strftime("%F %I:%M%p") %></td>
        <% else %>
          <td class="align-center"></td>
          <td class="align-center"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
